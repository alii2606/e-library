// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
  output        = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        Int     @id @default(autoincrement())
  userName  String  @unique
  password  String
  fName     String
  lName     String
  isManager Boolean
}

model Book {
  id        Int       @id @default(autoincrement())
  title     String    @unique
  type      String
  price     Float
  authorId  Int
  author    Author    @relation(fields: [authorId], references: [id])
  pubId     Int
  publisher Publisher @relation(fields: [pubId], references: [id])
}

model Author {
  id      Int    @id @default(autoincrement())
  fName   String
  lName   String
  country String
  city    String
  address String
  Book    Book[]
}

model Publisher {
  id    Int    @id @default(autoincrement())
  pName String
  city  String
  Book  Book[]
}
